# ===========================
# VoltBay Environment Configuration
# ===========================
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=voltbay
POSTGRES_USER=voltbay_user
POSTGRES_PASSWORD=voltbay_password

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-with-minimum-32-characters

# Email Configuration (Optional - for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Development URLs
VITE_API_URL=http://localhost:5001
VITE_AUTH_URL=http://localhost:4000

# App Configuration
VITE_APP_NAME=VoltBay
VITE_APP_VERSION=1.0.0 